                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">

                                <div class="row">
                                    @{ var counter = 0; }
                                    @foreach (var item in ViewBag.JucariiHandmade)
                                    {
                                        if (counter < 3)
                                        {
                                            <div class="col-md-4 text-center">
                                                <div class="menu-wrap">
                                                    <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                    <div class="text">
                                                        <h3><a href="#">@item.Name</a></h3>
                                                        <p>Artisans crafting treasures, merging passion, precision, nature's beauty, authenticity, soulful craftsmanship.</p>
                                                        <p class="price"><span>$ @item.Price</span></p>
                                                        <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Jucării handmade" })" method="post">
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                            counter++;
                                        }

                                    }


