
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}

<section class="home-slider owl-carousel">

    <div class="slider-item" style="background-image: url(/Content/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Our Products</h1>
                    <p class="breadcrumbs"><span class="mr-2">@Html.ActionLink("Home","Index","Home")</span> <span>Products</span></p>
                </div>

            </div>
        </div>
    </div>
</section>



<section class="ftco-menu mb-5 pb-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-md-7 heading-section text-center ftco-animate">
                <span class="subheading">Discover</span>
                <h2 class="mb-4">Our Products</h2>
            </div>
        </div>
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">Gentuțe Handmade</a>

                            <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Jucării Handmade</a>

                            <a class="nav-link" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false">Botoșei</a>

                            <a class="nav-link" id="v-pills-4-tab" data-toggle="pill" href="#v-pills-4" role="tab" aria-controls="v-pills-4" aria-selected="false">Bijuterii Handmade</a>

                            <a class="nav-link" id="v-pills-5-tab" data-toggle="pill" href="#v-pills-5" role="tab" aria-controls="v-pills-5" aria-selected="false">Păturici Handmade</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.GentuteHandmade)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="#">@item.Name</a></h3>
                                                    <p class="price"><span>$ @item.Price</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Gentuțe handmade" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-2-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.JucariiHandmade)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="#">@item.Name</a></h3>
                                                    <p class="price"><span>$ @item.Price</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="Drink" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Jucării handmade" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-3" role="tabpanel" aria-labelledby="v-pills-3-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.Botosei)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="#">@item.Name</a></h3>
                                                    <p class="price"><span>$ @item.Price</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="Drink" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Botoșei" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-4" role="tabpanel" aria-labelledby="v-pills-4-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.BijuteriiHandmade)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="#">@item.Name</a></h3>
                                                    <p class="price"><span>$ @item.Price</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="Drink" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Bijuterii handmade" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-5" role="tabpanel" aria-labelledby="v-pills-5-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.PaturiciHandmade)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="#">@item.Name</a></h3>
                                                    <p class="price"><span>$ @item.Price</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="Dessert" action="@Url.Action("AddToCart", "Buy", new { ProductId = item.Id, category = "Păturică handmade" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

