@model handmadeShop.Web.Models.ReservationViewModel
@{
    ViewBag.Title = "Successful Reservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}

<div class="container" style="margin-top: 200px;">
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success" role="alert">
                <h4 class="alert-heading">Reservation Successful!</h4>
                <p>Your reservation has been successfully placed. Below are the details of your reservation:</p>
                <hr>
                <h5>Reservation Details:</h5>
                <ul>
                    <li><strong>First Name:</strong> @Model.FirstName</li>
                    <li><strong>Last Name:</strong> @Model.LastName</li>
                    <li><strong>Date:</strong> @Model.ReservationDate.ToShortDateString()</li>
                    <li><strong>Time:</strong> @Model.ReservationTime</li>
                    <li><strong>PhoneNumber:</strong> @Model.PhoneNumber</li>
                    @if (Model.Message != null)
                    {
                    <li><strong>Message:</strong> @Model.Message</li>
                    }

                </ul>
                <hr>
                <p>Thank you for choosing us. We look forward to seeing you!</p> 
            </div>
        </div>
    </div>
</div>
