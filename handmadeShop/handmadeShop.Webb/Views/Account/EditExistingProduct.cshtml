@model handmadeShop.Web.Models.ProductModel

@{
    ViewBag.Title = "Edit Existing Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}
<link rel="stylesheet" type="text/css" href="~/Content/custom-form.css">
<div class="container" style="margin-top:150px">
  
    <div class="form-container">
        <h2>Edit Product</h2>
        @using (Html.BeginForm("EditExistingProduct", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.PathImage)
            @Html.HiddenFor(model => model.Category)
            <div class="form-group">
                @Html.LabelFor(model => model.Name)
                @Html.TextBoxFor(model => model.Name, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price)
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>


            <button type="submit" class="btn btn-primary">Save</button>
        }
    </div>
    </div>
