@model IEnumerable<handmadeShop.Web.Models.ProductModel>
@using System.Globalization
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}
<section class="home-slider owl-carousel">

    <div class="slider-item" style="background-image: url(/Content/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">

                <div class="col-md-7 col-sm-12 text-center ftco-animate">
                    <h1 class="mb-3 mt-5 bread">Order Online</h1>
                    <p class="breadcrumbs"><span class="mr-2">@Html.ActionLink("Home", "Index", "Home")</span> <span>Shop</span></p>
                </div>

            </div>
        </div>
    </div>
</section>


<section class="ftco-menu mb-5 pb-5">
    <div class="container">
        <div class="row d-md-flex">
            <div class="col-lg-12 ftco-animate p-md-5">
                <div class="row">
                    <div class="col-md-12 nav-link-wrap mb-5">
                        <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link" id="v-pills-1-tab" data-toggle="pill" href="#v-pills-1" role="tab" aria-controls="v-pills-1" aria-selected="true">Haine Nationale</a>

                            <a class="nav-link" id="v-pills-2-tab" data-toggle="pill" href="#v-pills-2" role="tab" aria-controls="v-pills-2" aria-selected="false">Jucarii</a>

                            <a class="nav-link" id="v-pills-3-tab" data-toggle="pill" href="#v-pills-3" role="tab" aria-controls="v-pills-3" aria-selected="false">Gentute</a>

                            <a class="nav-link" id="v-pills-4-tab" data-toggle="pill" href="#v-pills-4" role="tab" aria-controls="v-pills-4" aria-selected="false">Articole pentru Copii</a>
                        </div>
                    </div>
                    <div class="col-md-12 d-flex align-items-center">

                        <div class="tab-content ftco-animate" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-0" role="tabpanel" aria-labelledby="v-pills-0-tab">
                                <div class="row">
                                    @foreach (var item in Model)
                                    {
                                        <div class="col-md-3">
                                            <div class="menu-entry">
                                                <a href="#" class="img" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text text-center pt-4">
                                                    <h3><a href="product-single.html">@item.Name</a></h3>
                                                    <p>A small river named Duden flows by their place and supplies</p>
                                                    <p>
                                                        <span class="price-value" data-item-id="@item.Id">
                                                            @item.Price.ToString("C", CultureInfo.GetCultureInfo("en-US"))
                                                        </span>
                                                    </p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="Coffee" action="@Url.Action("AddToCartItem", "Buy", new { CoffeeId = item.Id })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-1" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.HaineNationale)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="product-single.html">@item.Name</a></h3>
                                                    <p>A small river named Duden flows by their place and supplies</p>
                                                    <p class="price"><span>@item.Price.ToString("C", CultureInfo.GetCultureInfo("en-US"))</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCartItem", "Buy", new { CoffeeId = item.Id,category="HaineNationale" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-2" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.Jucarii)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="product-single.html">@item.Name</a></h3>
                                                    <p>A small river named Duden flows by their place and supplies</p>
                                                    <p class="price"><span>@item.Price.ToString("C", CultureInfo.GetCultureInfo("en-US"))</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCartItem", "Buy", new { CoffeeId = item.Id,category="Jucarii" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-3" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.Gentute)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="product-single.html">@item.Name</a></h3>
                                                    <p>A small river named Duden flows by their place and supplies</p>
                                                    <p class="price"><span>@item.Price.ToString("C", CultureInfo.GetCultureInfo("en-US"))</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCartItem", "Buy", new { CoffeeId = item.Id,category="Gentute" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-4" role="tabpanel" aria-labelledby="v-pills-1-tab">
                                <div class="row">
                                    @foreach (var item in ViewBag.ArticoleCopii)
                                    {
                                        <div class="col-md-4 text-center">
                                            <div class="menu-wrap">
                                                <a href="#" class="menu-img img mb-4" style="background-image: url(@item.PathImage);"></a>
                                                <div class="text">
                                                    <h3><a href="product-single.html">@item.Name</a></h3>
                                                    <p>A small river named Duden flows by their place and supplies</p>
                                                    <p class="price"><span>@item.Price.ToString("C", CultureInfo.GetCultureInfo("en-US"))</span></p>
                                                    <form id="add-item-form" data-item-id="@item.Id" data-item-category="MainDish" action="@Url.Action("AddToCartItem", "Buy", new { CoffeeId = item.Id,category="ArticoleCopii" })" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-primary btn-outline-primary add-to-cart">Add To Cart</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



