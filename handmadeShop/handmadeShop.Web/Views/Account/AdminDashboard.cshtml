@model handmadeShop.Web.Models.UserModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["RenderNavbar"] = true;
}

<link rel="stylesheet" type="text/css" href="~/Content/custom-profile.css">
<section class="vh-100" style="margin-top: 150px; margin-bottom:150px">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="user-profile text-center">
                    <img src="~/Content/images/Admin.jpg" class="img-fluid" alt="Admin Image">
                    <h5 class="mb-3">@Model.Name</h5>
                    <p class="mb-2"><strong>User Name:</strong> @Model.UserName</p>
                    <p class="mb-2"><strong>Address:</strong> @Model.Address</p>
                    <p class="mb-4"><strong>Email:</strong> @Model.Email</p>
                    @Html.ActionLink("Edit", "EditClientProfile", "Account", null, new { @class = "btn btn-primary edit" })
                </div>
            </div>
        </div>
    </div>
</section>





